<config>
    <phpunit>
        <suite>
            <modules>
                <Oggetto_Question/>
            </modules>
        </suite>
    </phpunit>
    <modules>
        <Oggetto_Question>
            <version>0.0.1</version>
        </Oggetto_Question>
    </modules>
    <frontend>
        <routers>
            <question>
                <use>standard</use>
                <args>
                    <module>Oggetto_Question</module>
                    <frontName>question</frontName>
                </args>
            </question>
        </routers>

        <translate>
            <modules>
                <Oggetto_Question>
                    <files>
                        <default>Oggetto_Question.csv</default>
                    </files>
                </Oggetto_Question>
            </modules>
        </translate>

        <layout>
            <updates>
                <question>
                      <file>question.xml</file>
                </question>
            </updates>
        </layout>
    </frontend>

    <global>
        <helpers>
            <oggetto_question>
                <class>Oggetto_Question_Helper</class>
            </oggetto_question>
        </helpers>

        <blocks>
            <question>
                <rewrite>
                    <question>Oggetto_Question_Block_Form</question>
                </rewrite>
            </question>

            <oggetto_question>
                <class>Oggetto_Question_Block</class>
            </oggetto_question>

        </blocks>

        <models>
            <my>
                <class>Oggetto_Question_Model_Response</class>
            </my>

            <question>
                <class>Oggetto_Question_Model</class>
                <resourceModel>question_resource</resourceModel>
            </question>


            <question_resource>
                <class>Oggetto_Question_Model_Resource</class>
                <entities>
                    <question>
                        <table>question</table>
                    </question>
                </entities>
            </question_resource>
        </models>

        <resources>
            <question_setup>
                <setup>
                    <module>Oggetto_Question</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </question_setup>
        </resources>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Oggetto_Question before="Mage_Adminhtml">Oggetto_Question_Adminhtml</Oggetto_Question>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <oggetto_question>
                    <file>question.xml</file>
                </oggetto_question>
            </updates>
        </layout>
    </adminhtml>
</config>
