<config>
    <modules>
        <Oggetto_Pay>
            <version>0.1.0</version>
        </Oggetto_Pay>
    </modules>

    <phpunit>
        <suite>
            <modules>
                <Oggetto_Pay/>
            </modules>
        </suite>
    </phpunit>

    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Oggetto_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
        </routers>
        <layout>
            <updates>
                <pay>
                    <file>pay.xml</file>
                </pay>
            </updates>
        </layout>
    </frontend>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<check_no>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_no>
    		 	<check_date>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_date>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <pay>
                <class>Oggetto_Pay_Model</class>
                <resourceModel>pay_mysql4</resourceModel>
            </pay>
            <pay_mysql4>
                <class>Oggetto_Pay_Model_Mysql4</class>
                <entities>
                    <pay>
                        <table>pay</table>
                    </pay>
                </entities>
            </pay_mysql4>
        </models>
        <resources>
            <pay_setup>
                <setup>
                    <module>Oggetto_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>
        <blocks>
            <pay>
                <class>Oggetto_Pay_Block</class>
            </pay>
        </blocks>
        <helpers>
            <pay>
                <class>Oggetto_Pay_Helper</class>
            </pay>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <auto_invoice_order>
                        <type>singleton</type>
                        <class>Oggetto_Pay_Model_Observer</class>
                        <method>implementOrderStatus</method>
                    </auto_invoice_order>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <default>
        <payment>
            <pay>
                <active>1</active>
                <model>pay/pay</model>
                <order_status>processing</order_status>
                <title>Oggetto Pay Method</title>
                <gateway_url>http://edu.oggettoweb.ru/homework/payment/form.php</gateway_url>
                <api_key>ZnVjayB0aGUgZHVjaw==</api_key>
            </pay>
         </payment>
    </default>
</config>